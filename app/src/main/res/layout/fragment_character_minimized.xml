<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_character_minimized_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_character_minimized_iv_avatar"
        android:layout_width="93dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fragment_character_minimized_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@+id/fragment_character_minimized_iv_avatar"
        android:text="name"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fragment_character_minimized_tv_species"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_character_minimized_tv_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/fragment_character_minimized_iv_avatar"
        android:text="species" />

    <TextView
        android:id="@+id/fragment_character_minimized_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_character_minimized_tv_name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@+id/fragment_character_minimized_tv_species"
        android:text="status" />

    <TextView
        android:id="@+id/fragment_character_minimized_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="id" />

    <TextView
        android:id="@+id/fragment_character_minimized_tv_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_character_minimized_tv_species"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@+id/fragment_character_minimized_iv_avatar"
        android:text="origin" />
</RelativeLayout>